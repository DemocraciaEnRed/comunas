#law-wrapper
  .alert-danger
    color #d95e59
    a
      color #952722
  .create-tag
    text-transform none
    padding-top 0.8em
    padding-bottom 0.6em
    border-radius 3px
    font-size 1em
  form
    .form-group
      span.error
        position static
        top 40px

    .link-group
      span.error
        top 40px
        right 20px

  .publish-status
    p
      padding 10px
      text-align center

      a
        font-size 12px
        text-decoration underline
        letter-spacing 0.04em

      span
        margin-right 5px
        letter-spacing 0.04em

  .law-admin
    form
      .form-group.closingAt
        overflow hidden

        .input-group
          width 40%
          float left
          margin-left 0

          &:last-child
            margin-left 12px

        span.error
          top 10px

      .form-group
        input[readonly]
          background-color #fff
          cursor default

      textarea
        min-height 180px

      a.add-clause
      a.add-link
        width 100%
        margin 15px 0px

      a.add-link.btn-info
        background #16a085

      span.add-clause-forbidden
      span.add-link-forbidden
        display block
        width 100%
        color #F00
        text-align center

    .law-links
      overflow hidden

    .law-clause
      .clause-row
        .checkbox
          margin 0
        .clause-group
          &:first
            background red
        .clause-group.clause-order
          label
          input
            margin-left 5%
        &.text
          margin-top -20px

    .law-clause
    .law-link
      display block
      position relative
      float left
      width 100%

      .remove-clause
        float right

      .clause-row
      .link-row
        display block
        position relative
        float left
        width 100%
        margin 0px
        padding 10px 0px

        .clause-group
        .link-group
          display block
          position relative
          float left
          width 45%
          margin 0px
          padding 0px

          label
          input
            width 95%
            float left

          &.link-commands
            width 10%
            a
              padding 0
              margin-top 4px

              span
                color lightgray

      h4
        margin-top 0

  .commands
    margin 30px 0

    .btn
      width 100%
      margin-bottom 3px

.popover
  display block !important
  cursor default

.clock
  font-size 14px

.clock
  td
    padding 2px
